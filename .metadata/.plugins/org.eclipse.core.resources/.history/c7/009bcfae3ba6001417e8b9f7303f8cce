public class ThreadRunner {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		T1 t1 = new T1();
		t1.run();
		
		try {
			Thread.sleep(5000);
		} catch (InterruptedException ie) {
			System.out.println("Sleep error");
		}
		System.out.println("test");
		T2 t2 = new T2();
		t2.run();
		
		try {
			Thread.sleep(5000);
		} catch (InterruptedException ie) {
			System.out.println("Sleep error");
		}
		
		t1.interrupt();
		
		try {
			Thread.sleep(5000);
		} catch (InterruptedException ie) {
			System.out.println("Sleep error");
		}
		
		//t2.interrupt();
	}

}
