public class T1 extends Thread{
	private boolean alive = true;
	
	public T1(){
		System.out.println("Creating and starting thread 1");
		start();
	}
	
	public void run(){
		while (alive){
			System.out.println("Thread 1");
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
	
	public void kill(){
		alive = false;
	}
	
	public void wake(){
		alive = true;
	}

}
