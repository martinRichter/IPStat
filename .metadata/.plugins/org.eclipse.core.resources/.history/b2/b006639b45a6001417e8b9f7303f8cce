public class T2 implements Runnable {
	Thread t = new Thread(this);
	private boolean alive = true;

	public T2() {
		System.out.println("Creating and starting thread 1");
		t.start();
	}

	public void run() {
		while (alive) {
			System.out.println("Thread 2");
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}

	public void kill() {
		alive = false;
	}

	public void wake() {
		alive = true;
	}
}
